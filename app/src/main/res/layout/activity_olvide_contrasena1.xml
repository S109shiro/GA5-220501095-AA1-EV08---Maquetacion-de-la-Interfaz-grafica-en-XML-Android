<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2_Login"
    tools:layout_editor_absoluteX="3dp"
    tools:layout_editor_absoluteY="-4dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="414dp"
        android:layout_height="925dp"
        app:srcCompat="@drawable/as"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="3dp" />

    <LinearLayout
        android:layout_width="324dp"
        android:layout_height="249dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="50px"
        android:paddingBottom="20px"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="390dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextTextEmailAddress5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Correo Electronico"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="50px"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30px"
                android:layout_weight="1"
                android:backgroundTint="#F2EEEE"
                android:text="Cancelar"
                android:textColor="#000000" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#2C2C2C"
                android:text="Recibir codigo" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="150dp"
        android:layout_height="145dp"
        app:srcCompat="@drawable/car_front_view_62662"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="160dp" />

</androidx.constraintlayout.widget.ConstraintLayout>